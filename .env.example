# Archivo de ejemplo para variables de entorno
# Copia este archivo como .env y modifica los valores según tu entorno

# === CONFIGURACIÓN DE BASE DE DATOS ===
POSTGRES_DB=veterinaria_db
POSTGRES_USER=vet_admin
POSTGRES_PASSWORD=VetClinic2025!SecurePass

# === CONFIGURACIÓN DE SPRING BOOT ===
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/veterinaria_db
SPRING_DATASOURCE_USERNAME=vet_admin
SPRING_DATASOURCE_PASSWORD=VetClinic2025!SecurePass

# === CONFIGURACIÓN DEL SERVIDOR ===
SERVER_PORT=8081

# === CONFIGURACIÓN DE JPA/HIBERNATE ===
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# === CONFIGURACIÓN DE LOGGING ===
LOGGING_LEVEL_COM_EXAMPLE_MICROSERVICIO_CLINICO=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE_SQL=DEBUG

# === CONFIGURACIÓN DE GRAPHQL ===
DGS_GRAPHQL_GRAPHIQL_ENABLED=true

# === CONFIGURACIÓN DE JAVA ===
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC

